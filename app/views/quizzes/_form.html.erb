<%= form_for(@quiz, class: "form") do |f| %>    
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400 mt-6 ">    
        <tbody>  
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-100">

                <td class="px-6 py-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="name">Name</label>                            
                    <%= f.text_field :name, class:"fshadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", required: "required", placeholder:"Name" %> 
                </td>

                <td class="px-6 py-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="description">Description</label>                                
                    <%= f.text_field :description, class:"fshadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", required: "required", placeholder:"Description" %> 
                </td>

                <td class="px-6 py-4">   
                    <%= link_to "Cancel", quizzes_path, class: "font-medium px-3 py-2 font-semibold text-sm bg-gray-100 rounded-none shadow-sm" %>                                    
                    <button type="submit" class="font-medium px-3 py-2 font-semibold text-sm bg-red-500 rounded-none shadow-sm" style= "background-color: #08a6e8 ; color: white " >Save</button>            
                </td>

            </tr>        
        </tbody>
    </table>  
<%end%>