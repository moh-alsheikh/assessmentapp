

<%= form_for([quiz, question], class: "form") do |f| %>    
    <% if question.errors.any? %>
      <div class="error-message">
        <%= question.errors.full_messages.to_sentence.capitalize %>
      </div>
    <% end %>
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400 mt-6 ">    
        <tbody>  
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-100">

                <td class="px-6 py-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="name">Question</label>                            
                    <%= f.text_field :question_text, class:"fshadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", required: "required", placeholder:"Name" %> 
                </td>                
                
                <td class="px-8 py-4">          
                  <%= link_to "Cancel", quiz_path(quiz), class: "font-medium px-3 py-2 font-semibold text-sm bg-gray-100 rounded-none shadow-sm" %> 
                  
                  <button type="submit" class="font-medium px-3 py-2 font-semibold text-sm bg-red-500 rounded-none shadow-sm" style= "background-color: #08a6e8 ; color: white " >Save</button>            
                </td>

            </tr>        
        </tbody>
    </table>  

    
    
<%end%>